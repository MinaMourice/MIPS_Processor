module sign_extnd (In, Out);

input[15:0] In;
output wire[31:0] Out;
assign Out = In ;


endmodule



module testBennchSignExtnd ;

reg [15:0] In;
wire [31:0] Out;

 sign_extnd M(In, Out);

 initial
 begin
  In = 122;
 end
 begin
 initial
  $monitor ("Input is %b  : Output is %b"  ,In, Out);
 end
endmodule
